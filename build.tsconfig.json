{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["esnext", "dom"],
        "baseUrl": "./",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./package/bundles/",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "./src/**/*.ts"
    ]
}